---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../data/projects";
---

<BaseLayout title="Brayden Adcox | Home" description="Portfolio">
  <main class="w-full">

    <section id="intro" data-page class="relative min-h-screen bg-[#181818]">

      <div class="pointer-events-none absolute inset-0 overflow-hidden z-0">
        <div class="triangle triangle-1 triangle-cw"></div>
        <div class="triangle triangle-2 triangle-ccw"></div>
        <div class="triangle triangle-3 triangle-cw"></div>
        <div class="triangle triangle-4 triangle-ccw"></div>
        <div class="triangle triangle-5 triangle-ccw"></div>
        <div class="triangle triangle-6 triangle-cw"></div>
        <div class="triangle triangle-7 triangle-ccw"></div>
        <div class="triangle triangle-8 triangle-cw"></div>
        <div class="triangle triangle-9 triangle-cw"></div>
        <div class="triangle triangle-10 triangle-ccw"></div>
        <div class="triangle triangle-11 triangle-cw"></div>
        <div class="triangle triangle-12 triangle-ccw"></div>
        <div class="triangle triangle-13 triangle-cw"></div>
        <div class="triangle triangle-14 triangle-ccw"></div>
        <div class="triangle triangle-15 triangle-cw"></div>
        <div class="triangle triangle-16 triangle-ccw"></div>
        <div class="triangle triangle-17 triangle-cw"></div>
        <div class="triangle triangle-18 triangle-ccw"></div>
        <div class="triangle triangle-19 triangle-cw"></div>
        <div class="triangle triangle-20 triangle-ccw"></div>
      </div>

      <div class="relative z-10 mx-auto max-w-6xl px-6">
        <div class="flex min-h-screen items-center justify-between gap-12">
          
          <!-- LEFT: TEXT -->
          <div class="max-w-3xl">
            <h1
              class="text-8xl font-bold tracking-tight leading-[1.1] pb-3
                    bg-gradient-to-r from-orange-300 via-amber-300 to-rose-300
                    bg-clip-text text-transparent
                    opacity-0 -translate-x-8 animate-fade-in-left [animation-delay:500ms]"
            >
              Hi, I’m Brayden!
            </h1>

            <p
              class="mt-6 text-4xl font-semibold tracking-tight text-white/90
                    opacity-0 -translate-x-8 animate-fade-in-left [animation-delay:500ms]"
            >
              I build ML systems for the real world.
            </p>

            <a
              href="#about"
              class="inline-block mt-8 rounded-xl border border-white/20 px-5 py-2
                    text-white/80 text-sm transition hover:border-white/40 hover:text-white
                    opacity-0 -translate-x-8 animate-fade-in-left [animation-delay:1600ms]"
            >
              Learn more about what I do →
            </a>
          </div>

          <!-- RIGHT: IMAGE -->
          <div
            class="w-[360px] h-[460px] rounded-2xl overflow-hidden
                  opacity-0 translate-x-8 animate-fade-in-right [animation-delay:1000ms]"
          >
            <img
              src="public/me.PNG"
              alt="Brayden"
              class="w-full h-full object-cover"
            />
          </div>

        </div>
      </div>
    </section>






        <!-- ABOUT (full page) -->
    <section id="about" data-page class="min-h-screen border-b border-white/10 bg-slate-700">
      <div class="mx-auto max-w-5xl px-6">
        <div class="flex min-h-screen flex-col justify-center">
          <h2 class="text-3xl font-semibold tracking-tight">About</h2>

          <p class="mt-4 max-w-2xl text-white/70">
            CS student focused on building real systems: reliable APIs, ML inference pipelines, and deployable services.
            I like problems involving correctness, performance, and production constraints.
          </p>

          <div class="mt-10">
            <a
              href="#projects"
              class="rounded-xl border border-white/15 px-4 py-2 text-white/90 transition hover:border-white/30 hover:text-white"
            >
              Go to Projects
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- PROJECTS (full screen minimum) -->
    <section id="projects" data-page class="min-h-screen border-b border-white/10 bg-slate-900">
      <div class="mx-auto max-w-5xl px-6 min-h-screen flex flex-col justify-center py-24">
      <h2 class="text-3xl font-semibold tracking-tight">Projects</h2>
      <p class="mt-3 max-w-2xl text-white/60">
        Selected work focused on production constraints: validation, reliability, and deployable systems.
      </p>

      <div class="mt-10 grid gap-6 sm:grid-cols-2">
        {projects.map((p) => (
          <article class="group rounded-2xl border border-white/10 bg-white/5 p-6 transition hover:border-white/25 hover:bg-white/10">
            <div class="flex h-full flex-col">
              <div>
                <h3 class="text-xl font-semibold tracking-tight">{p.title}</h3>
                <p class="mt-3 text-white/70">{p.summary}</p>
              </div>

              <div class="mt-5 flex flex-wrap gap-2">
                {p.tech.map((t) => (
                  <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-sm text-white/70">
                    {t}
                  </span>
                ))}
              </div>

              <div class="mt-6 flex gap-4 pt-2">
                {p.links.map((l) => (
                  <a
                    class="text-white/80 underline-offset-4 transition hover:text-white hover:underline"
                    href={l.href}
                    target="_blank"
                    rel="noreferrer"
                  >
                    {l.label}
                  </a>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
        <div id="contact" class="mt-20 border-t border-white/10 pt-12">
          <h2 class="text-3xl font-semibold tracking-tight">Contact</h2>

          <div class="mt-8 flex flex-wrap gap-4">
            <a class="text-white/80 underline-offset-4 transition hover:text-white hover:underline" href="mailto:braydenadcox@gmail.com">
              Email
            </a>
            <a class="text-white/80 underline-offset-4 transition hover:text-white hover:underline" href="https://github.com/braydenadcox" target="_blank" rel="noreferrer">
              GitHub
            </a>
            <a class="text-white/80 underline-offset-4 transition hover:text-white hover:underline" href="https://www.linkedin.com/in/brayden-adcox-83ab1129b/" target="_blank" rel="noreferrer">
              LinkedIn
            </a>
            <a class="text-white/80 underline-offset-4 transition hover:text-white hover:underline" href="/BraydenAdcox_Resume.pdf" target="_blank" rel="noreferrer">
              Resume
            </a>
          </div>

          <footer class="mt-16 text-sm text-white/50">
            © Brayden Adcox · 2026 · Built with Astro
          </footer>

          <div class="mt-10">
            <a
              href="#intro"
              class="rounded-xl border border-white/15 px-4 py-2 text-white/90 transition hover:border-white/30 hover:text-white"
            >
              Back to top
            </a>
          </div>
        </div>
      </section>

      <button
        id="nextBtn"
        class="fixed bottom-6 left-1/2 z-50 -translate-x-1/2 rounded-full border border-white/20 bg-black/50 px-4 py-2 text-sm text-white backdrop-blur transition hover:border-white/40"
      >
        ↓
      </button>

      <script is:inline>
        const pages = Array.from(document.querySelectorAll("[data-page]"));
        const btn = document.getElementById("nextBtn");

        function currentPageIndex() {
          const y = window.scrollY;
          let idx = 0;

          for (let i = 0; i < pages.length; i++) {
            if (pages[i].offsetTop <= y + 10) idx = i;
          }
          return idx;
        }

        btn.addEventListener("click", () => {
          const i = currentPageIndex();
          const next = pages[i + 1];
          if (next) next.scrollIntoView({ behavior: "smooth", block: "start" });
        });

        const observer = new IntersectionObserver(
          ([entry]) => {
            btn.hidden = entry.isIntersecting;
          },
          { threshold: 0.6 }
        );

        observer.observe(pages[pages.length - 1]);
      </script>


  </main>
</BaseLayout>

<style is:global>
  html { outline: 10px solid lime !important; }
</style>
